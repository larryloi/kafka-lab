{
  "name": "mysql_inventory_DebeziumSrc03",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",

    "tasks.max" : "1",
    "poll.interval.ms": "15000",

    "database.hostname": "192.168.138.16",
    "database.port": "3306",
    "database.user": "kafka_src",
    "database.password": "Abcd1234",
    "database.server.id": "184058",
    "database.server.name": "inventory",
    "database.include.list": "inventory",
    "database.encrypt": "false",
    "table.include.list": "inventory.my_orders",

    "topic.prefix": "mysql_inventory_DebeziumSrc03",
